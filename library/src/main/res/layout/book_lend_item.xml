<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <Button
        android:id="@+id/btn"
        style="@style/innerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5.0dip"
        android:focusable="false"
        android:onClick="btnClickHandler"
        android:singleLine="true"
        android:text="@string/renew_book" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
      >

            <TextView
            android:id="@+id/title_author"
            style="@style/bookHeaderText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="false" />
        
            
        <TextView
            android:id="@+id/isbn"
            style="@style/bookAppendText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true" />
        

    
         <TextView
            android:id="@+id/lend_time"
            style="@style/bookAppendText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true" />

        <TextView
            android:id="@+id/return_time"
            style="@style/bookAppendText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true" />

        <TextView
            android:id="@+id/renew_times"
            style="@style/bookAppendText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true" />

        <TextView
            android:id="@+id/location"
            style="@style/bookAppendText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true" />
 

       
    </LinearLayout>

</RelativeLayout>